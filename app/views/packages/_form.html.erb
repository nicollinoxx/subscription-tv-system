<%= form_with(model: package, class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": package.errors[:name].none?, "border-red-400 focus:outline-red-600": package.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, min: 0, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": package.errors[:price].none?, "border-red-400 focus:outline-red-600": package.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :plan, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :plan_id, Plan.all, :id, :name, {}, class: [ "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-offset-2 transition-colors duration-200", {"border-gray-400 focus:outline-blue-600": package.errors[:price].none?, "border-red-400 focus:outline-red-600": package.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :additional_services, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :additional_service_ids, AdditionalService.all, :id, :name, {}, multiple: true, required: true, step: "any", class: [ "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-offset-2 transition-colors duration-200", {"border-gray-400 focus:outline-blue-600": package.errors[:price].none?, "border-red-400 focus:outline-red-600": package.errors[:price].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
