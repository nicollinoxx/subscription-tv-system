<div id="<%= dom_id signature %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= signature.customer.name %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Plan:</strong>
    <%= signature.plan&.name %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Package:</strong>
    <%= signature.package&.name %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Additionals services:</strong>
    <ul class="ms-4 mb-4 list-disc">
      <% signature.additional_services.each do |additional_service| %>
        <li><%= additional_service.name %></li>
      <% end %>
    </ul>
  </div>
</div>
