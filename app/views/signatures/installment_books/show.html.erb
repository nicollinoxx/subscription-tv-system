<% content_for :title, "Invoices" %>

<div class="w-full p-6">
  <div class="shadow rounded p-6 mb-8">
    <h1 class="text-2xl font-bold text-blue-900 mb-4">Installment Book</h1>
    <div class="grid md:grid-cols-3 gap-4 text-sm">
      <div>
        <span class="font-medium text-gray-600">Total Amount:</span>
        <p class="text-xl font-bold text-blue-900"><%= @installment_book.price %></p>
      </div>
      <div>
        <span class="font-medium text-gray-600">Created:</span>
        <p class="text-lg"><%= @installment_book.created_at.to_date %></p>
      </div>
      <div>
        <span class="font-medium text-gray-600">Due Date:</span>
        <p class="text-lg"><%= @installment_book.due_date %></p>
      </div>
    </div>
  </div>

  <%= render partial: "signatures/invoices/invoice", collection: @signature.invoices, as: :invoice %>
</div>
