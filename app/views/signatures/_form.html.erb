<%= form_with(model: signature, class: "contents") do |form| %>
  <% if signature.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(signature.errors.count, "error") %> prohibited this signature from being saved:</h2>

      <ul class="list-disc ml-6">
        <% signature.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name, {}, class: [ "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-offset-2 transition-colors duration-200", {"border-gray-400 focus:outline-blue-600": signature.errors[:price].none?, "border-red-400 focus:outline-red-600": signature.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :plan_id, "Plan", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :plan_id, Plan.all, :id, :name, {prompt: "Plans"}, class: [ "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-offset-2 transition-colors duration-200", {"border-gray-400 focus:outline-blue-600": signature.errors[:price].none?, "border-red-400 focus:outline-red-600": signature.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :package_id, "Package", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :package_id, Package.all, :id, :name, {prompt: "Package"}, class: [ "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-offset-2 transition-colors duration-200", {"border-gray-400 focus:outline-blue-600": signature.errors[:price].none?, "border-red-400 focus:outline-red-600": signature.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :additional_service_ids, "Additional services",class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :additional_service_ids, AdditionalService.all, :id, :name, {prompt: "Additional services"}, multiple: true, class: [ "w-full px-3 py-2 border rounded-md shadow-sm focus:ring-2 focus:ring-offset-2 transition-colors duration-200", {"border-gray-400 focus:outline-blue-600": signature.errors[:price].none?, "border-red-400 focus:outline-red-600": signature.errors[:price].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
